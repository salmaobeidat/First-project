@model User

@{
    ViewData["Title"] = "ViewProfile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>ViewProfile</h2>
<br />
<br />

<div class="col-md-12 col-xl-4">
<div class="card dribble-card">
    <div class="card-header">
        
        <div class="d-inline-block d-flex justify-content-center">
                @{
                    if (@Model.Profileimagepath == null)
                    {
                        <img src=@Url.Content("~/images/user.jpg")
                         class="card-img-top"
                     asp-append-version="true"
                             alt="User image">
                    }
                    else
                    {
                        <img src=@Url.Content("~/images/" + @Model.Profileimagepath)
                          width=100% height="100"
                     asp-append-version="true" />
        
                    }
                }
            </div>
        </div>
    <div class="card-block text-center">
        <div class="row">
            <div class="col-6 b-r-default">
                <h2>User: @Model.UserName</h2>
                <h4>Gender: @Model.Gender</h4>

                <h4> Birthdate: @Model.Birthdate</h4>
            </div>
    </div>
</div>

<a asp-action="UpdateProfile" asp-controller="Admin" asp-route-id="@Model.UserId">Update profile</a>
    </div>
</div>

