@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Category page management</h1>
<br />

<p>
    <a asp-action="CategoryCreate">Create New Category</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryImage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>

                <td>
                    <img src=@Url.Content("~/images/" + @item.CategoryImagePath)
                     asp-append-version="true" style="border-radius:50%;" width="50" height="50" />
                </td>
                <td>
                    <a asp-action="CategoryEdit" asp-route-id="@item.CategoryId">Edit</a> |
                    <a asp-action="CategoryDetails" asp-route-id="@item.CategoryId">Details</a> |
                    <a asp-controller="Admin" asp-action="CategoryDelete" asp-route-id="@item.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
