@model Testimonial
@{
    ViewData["Title"] = "TestimonialCreation";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<!-- Contact us section -->
<section class="book_section layout_padding">
    <div class="container">
       
        @*Image column*@
        <div class="row d-flex justify-content-around">
            <div class="col-md-5">
                <img src=@Url.Content("~/Home/images/contact us image.jpg") alt="" asp-append-version="true">
            </div>


            <div class="col-md-5">
                @*form column*@

                <div class="heading_container">
                    <h2>
                        What do you think about us?
                    </h2>
                </div>
                <div class="form_container">
                    <form asp-action="Create" asp-controller="Testimonials">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <textarea asp-for="TestimonialContent" rows="6" style="width:100%; border-radius:1%;"></textarea>
                            <span asp-validation-for="TestimonialContent" class="text-danger"></span>
                        </div>
                        @*hidden to have the default value which is pending*@
                        <div class="form-group d-none" >
                            <label asp-for="StatusId" class="control-label"></label>
                            <select asp-for="StatusId" class="form-control" asp-items="ViewBag.StatusId"></select>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-warning"
                                   style="border-radius:45px; color:azure;padding: 8px 30px;" />
                        </div>
                    </form>

                </div>
            </div>

        </div>

    </div>
</section>
<!-- end Contact us section -->
