@model User
@{
    ViewData["Title"] = "UpdateProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update @Model.UserName Profile</h2>

<div class="row mx-4">
    <div class="col-md-4">
        <form asp-action="UpdateProfile" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            @*User name*@
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            @*Gender*@
            
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
               <br />
                <select name="gender" asp-for="Gender"  class="form-control">
                    <option disabled="disabled" selected="selected">Gender</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                </select>
                <div class="select-dropdown"></div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
    @*     <br />  *@
            <div class="form-group text-start">
                  
                <label asp-for="Birthdate" class="control-label "></label>
              <br />
                <input asp-for="Birthdate" class="form-control" />
                <span asp-validation-for="Birthdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfileImage" class="control-label"></label>
                <input asp-for="ProfileImage" class="form-control" />
                <span asp-validation-for="ProfileImage" class="text-danger"></span>
            </div>
            <div class="form-group" >
                <input type="submit"
                    value="Update" 
                    class="btn btn-default" 
                 style=" border: none;
                            border-radius: 45px;
                            background-color: #ffbe33;
                            color:#fff;
                            padding: 8px 30px;"/>
            </div>
        </form>
    </div>
</div>
