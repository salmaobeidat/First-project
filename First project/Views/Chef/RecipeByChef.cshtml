@model IEnumerable<Recipe>
@{
    ViewData["Title"] = "RecipeByChef";
    Layout = "~/Views/Shared/_ChefLayout.cshtml";

    int rowCount = 1;
}

<h1>Other chefs recipes</h1>
<br />
<br />
<!--Requirement: Search for the name of the receipe -->
<form asp-action="RecipeByChef">

    <div class="label-main">
        <label class="label label-default" style="color:#000;">Search for specific recipe?</label>
    </div>

    <div class="form-group row">
        <div class="col-sm-3">
            <input type="text" class="form-control" name="recipeName">
        </div>
        <div class="col-sm-3 d-flex align-items-end">
            <button class="btn btn-inverse btn-round ">Search</button>
        </div>
    </div>
</form>
<!-- End of requirement-->

<!-- Hover table card start -->
<div class="card">
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Chef name</th>
                        <th>Recipe name</th>
                        <th>Recipe price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@rowCount</th>
                            <td>@item.User.UserName</td>
                            <td>@item.RecipeName</td>
                            <td>@item.Price</td>
                        </tr>
                        { rowCount += 1; }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Hover table card end -->