@model User
@{
    ViewData["Title"] = "AllRecipesForChef";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="ml-4">@Model.UserName Recipes</h2>

<!-- Requirement: View all recipe -->

<section class="food_section layout_padding-bottom">
    <div class="filters-content ">

        <div class="row  d-flex justify-content-around">
            @foreach (var recipe in Model.Recipes)
            {
                <div class="col-sm-10 col-lg-3 all pizza  my-sm-2">
                    <div class="box">
                        <div>
                            <div class="img-box d-flex justify-content-center align-items-center">
                                <img src=@Url.Content("~/RecipesImages/"+recipe.RecipeImagePath)
                                 asp-append-version="true"
                                     class="img-fluid" style="height: 200px;  width:150px">
                            </div>
                            <div class="detail-box">
                                <h4>
                                    @recipe.RecipeName
                                </h4>
                                <h5>
                                    @recipe.Description
                                </h5>
                                <h5> @recipe.Price<sub>JOD</sub></h5>
                                <a asp-controller="Home" asp-action="Purchase"
                                    asp-route-id="@recipe.RecipeId"
                                   style="color: #ffbe33;">
                                    Buy now
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- End of requirement-->
