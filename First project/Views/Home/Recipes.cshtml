@model IEnumerable<Recipe>
@{
    ViewData["Title"] = "Recipes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h1 class="ml-4">Recipes</h1>

<!--Requirement: Search for the name of the receipe -->
<form asp-action="Recipes">

    <div class="form-group row d-flex justify-content-end">
        <div class="col-sm-3">
            <input type="text" class="form-control" name="recipeName">
        </div>
        <div class="col-sm-3">
            <button style=" border: none;
                            border-radius: 45px;
                            background-color: #ffbe33;
                            color:#fff;
                            padding: 8px 30px;">
                Search
            </button>
        </div>
    </div>
</form>
<!-- End of requirement-->
<!-- Requirement: View all recipe -->

<section class="food_section layout_padding-bottom">
    <div class="filters-content ">

        <div class="row  d-flex justify-content-around mx-2">
            @foreach (var item in Model)
            {
                <div class="col-sm-10 col-lg-4 all  my-sm-2">
                    <div class="box">
                        <div>
                            <div class="img-box d-flex justify-content-center align-items-center">
                                <img src=@Url.Content("~/RecipesImages/"+@item.RecipeImagePath)
                                 asp-append-version="true"
                                     class="img-fluid" style="height: 200px;  width:150px">
                            </div>
                            <div class="detail-box">
                                <h4>
                                    @item.RecipeName
                                </h4>
                                <h5>
                                    @item.Description
                                </h5>
                                <h5> @item.Price<sub>JOD</sub></h5>
                                <a asp-controller="Home" asp-action="Purchase"
                               asp-route-id="@item.RecipeId"
                                   style="color: #ffbe33;">
                                    Buy now
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
        
    </div>
</section>

<!-- end food section -->
<!-- End of requirement-->
