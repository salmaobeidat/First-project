@model IEnumerable<User>
@{
    ViewData["Title"] = "AllChefs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<h2 class="ml-4">Our Master Chefs</h2>

<section class="food_section layout_padding-bottom">
    <div class="filters-content ">

        <div class="row  d-flex justify-content-around">
            @foreach (var item in Model)
            {
                <div class="col-sm-10 col-lg-3  my-sm-2">
                    <div class="box">
                        <div>
                            <div class="img-box d-flex justify-content-center align-items-center">
                                <img src=@Url.Content("~/images/"+@item.Profileimagepath)
                                 asp-append-version="true"
                                     class="img-fluid" style="height: 200px;  width:150px">
                            </div>
                            <div class="detail-box">
                                <h4>
                                    @item.UserName
                                </h4>
                                <!-- the user here is the chef-->
                                <a asp-controller="Home" asp-action="AllRecipesForChef"
                                 asp-route-id="@item.UserId" 
                                   style="color: #ffbe33;">
                                    View recipes
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- End of requirement-->
