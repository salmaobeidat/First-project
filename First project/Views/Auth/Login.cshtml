@model Credential

@{
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="card-body">
    <h2 class="title">Login</h2>
    <form method="POST" asp-controller="Auth" asp-action="Login">

        @*Email*@
        <div class="input-group">
            <input class="input--style-2" type="email" placeholder="Example@example.com" asp-for="Email">
        </div>

        @*Password*@
        <div class="input-group">
            <input class="input--style-2" type="password" placeholder="Password" asp-for="Password">
        </div>
        <a asp-action="RegisterOption" asp-controller="Auth" class="aleardymember ">Not a member yet?</a>

        <div class="p-t-30">
            <button class="btn btn--radius btn--green" type="submit">Login</button>
        </div>
    </form>
</div>