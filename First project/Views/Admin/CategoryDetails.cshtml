@model First_project.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <br />
        <br />
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryImage)
        </dt>
        <dd class="col-sm-10">
            <img src=@Url.Content("~/images/" + Model.CategoryImagePath)
                 asp-append-version="true" style="border-radius:50%;" width="50" height="50" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="CategoryEdit" asp-route-id="@Model.CategoryId">Edit</a> |
    <a asp-action="CategoryIndex">Back to List</a>
</div>
