@model IEnumerable<Order>
@{
    ViewData["Title"] = "Order";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int rowCount = 1;
    decimal? siteProfit = 0;
    decimal? profit = 0;
   foreach (var i in Model)
    {
        siteProfit += i?.Recipe?.Price??0;
        profit += i?.Recipe?.Price ?? 0;
    }
    siteProfit *= (decimal)0.09;

}

<link href="https://cdn.datatables.net/1.11.1/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css" rel="stylesheet" />


<h1>Orders</h1>

<!--form to get all values and send them to the action at a time-->
<!-- why name? to map between parameter and input value.-->
<form asp-action="FilterationOrder" asp-controller="Admin" method="get">
    <div class="form-group row">
        <div class="col-sm-3">
            <div class="label-main">
                <label class="label label-default">Start date</label>
            </div>
            <input type="date" name="startDate" class="form-control">
        </div>
        <div class="col-sm-3">
            <div class="label-main">
                <label class="label label-default">End date</label>
            </div>
            <input type="date" class="form-control"
                   name="endDate">
        </div>
        <div class="col-sm-3 d-flex align-items-end">
            <button class="btn btn-inverse btn-round ">Search</button>
        </div>
    </div>

</form>
<!--End of  Search between two dates-->
<!-- monthly orders-->
<div class="form-group row">
    <div class="col-sm-3 col-md-3">
<form asp-action="MonthOrder" asp-controller="Admin" method="get">
            <div class="label-main">
                <label class="label label-default">Month</label>
            </div>
            <input type="month" name="monthDate" class="form-control">
            <div class="col-sm-3 d-flex align-items-end mt-1">
                <button class="btn btn-inverse btn-round ">Search</button>
            </div>
</form>
    </div>
<!-- End of monthly orders

-->
<!-- annual orders-->

    <div class="col-sm-3 col-md-3">
<form asp-action="YearOrder" asp-controller="Admin" method="get">

            <div class="label-main">
                <label for="year" class="label label-default">Year</label>
            </div>
            <select id="year" name="year" class="form-control">
                @for (int year = DateTime.Now.Year; year >= 2022; year--)
                {
                    <option value="@year">@year</option>
                }
            </select>
     
        <div class="col-sm-3 d-flex align-items-end mt-1">
            <button class="btn btn-inverse btn-round">Search</button>
        </div>
</form>
    </div>
 </div>
<!-- annual orders-->

<!-- Hover table card start -->
<div class="card p-4">
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table table-hover" id="order">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Recipe name</th>
                        <th>Ordered by:</th>
                        <th>Price</th>
                        <th>Order date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@rowCount</th>
                            <td>@item?.Recipe?.RecipeName</td>
                            <td>@item?.User?.UserName</td>
                            <td>@item?.Recipe?.Price</td>
                            <td>@item?.OrderDate</td>
                        </tr>
                        {
                            rowCount += 1;
                        }
                    }
                </tbody>
                <tfoot>
                   
                    <tr>
                        <td>Profits</td>
                        <td>@profit</td>
                    </tr>
                    <tr>
                        <td>Site profit</td>
                        <td>@siteProfit  </td>
                    </tr>

                </tfoot>
            </table>
        </div>
    </div>
</div>
<!-- Hover table card end -->
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>

<script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js" defer></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>


<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js" defer></script>

<script>
    $(document).ready(function () {
        $('#order').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copyHtml5',
                'excelHtml5',
                'csvHtml5',
                'pdfHtml5'
            ]
        });
    });
</script>