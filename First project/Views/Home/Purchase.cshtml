@model Visainfo
@{
    ViewData["Title"] = "Purchase";
    Layout = "~/Views/Shared/_CreditCardLayout.cshtml";

}


<div class="container">

    <div class="page-header">
        <h1>Thank you for using our website </h1>
    </div>

    <!-- Credit Card Payment Form - START -->

    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="row">
                            <h3 class="text-center">Payment Details</h3>
                            <img class="img-responsive cc-img" src="https://www.prepbootstrap.com/Content/images/shared/misc/creditcardicons.png">
                        </div>
                    </div>
                    <div class="panel-body">
                        <form role="form" asp-action="Purchase" asp-controller="Home">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            @*user ID which will be taken from session due to hidden*@
                            <div class="form-group">
                                <label asp-for="UserId" class="control-label" ></label>
                                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId" type="hidden"></select>
                            </div>
                            @*Card number*@
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="form-group">
                                        <label asp-for="CardNumber">CARD NUMBER</label>
                                        <div class="input-group">
                                            <input asp-for="CardNumber" type="tel" class="form-control" placeholder="Valid Card Number" />
                                            <span class="input-group-addon"><span class="fa fa-credit-card"></span></span>
                                            <span asp-validation-for="CardNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @*Visa card expiry date*@
                            <div class="row">
                                <div class="col-xs-7 col-md-7">
                                    <div class="form-group">
                                        <label asp-for="ExpiryDate"><span class="hidden-xs">EXPIRATION</span><span class="visible-xs-inline">EXP</span> DATE</label>
                                        <input type="tel" class="form-control" placeholder="MM / YY" asp-for="ExpiryDate" />
                                    </div>
                                </div>

                                @*CVC *@
                                <div class="col-xs-5 col-md-5 pull-right">
                                    <div class="form-group">
                                        <label asp-for="Cvc">CV CODE</label>
                                        <input asp-for="Cvc" type="tel" class="form-control" placeholder="CVC" />
                                        <span asp-validation-for="Cvc" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            @*Card holder name*@
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="form-group">
                                        <label asp-for="CardHolderName">CARD OWNER</label>
                                        <input asp-for="CardHolderName" type="text" 
                                        class="form-control" placeholder="Card Owner Names" />
                                        <span asp-validation-for="CardHolderName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col-xs-12">
                                <button class="btn btn-warning btn-lg btn-block">Purchase</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .cc-img {
            margin: 0 auto;
        }
    </style>
    <!-- Credit Card Payment Form - END -->

</div>