

@{
    Layout = "~/Views/Shared/_ChefLayout.cshtml";
}



<h1>Categories of the recipes</h1>


<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Category name:
            </th>

            <th>
                Category image:
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.categories)
        {
            <tr>
                <td>
                    @item.CategoryName
                </td>

                <td>
                    <img src=@Url.Content("~/images/" + @item.CategoryImagePath)
                         width="50" height="50"
                     asp-append-version="true" />
                </td>
                <td>
                    <a asp-controller="Chef" asp-action="CategoryDetails" asp-route-id="@item.CategoryId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
