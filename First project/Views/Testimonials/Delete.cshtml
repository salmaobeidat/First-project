@model First_project.Models.Testimonial

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h3>Are you sure you want to delete this?</h3>
<div>

    <br /><br />
    <div class="col-md-12 col-xl-4">
        <div class="card fb-card">
            <div class="card-header">
                <div class="d-inline-block ">
                    <h3 style="color:azure">
                        @Html.DisplayFor(model => model.User.UserName)
                    </h3>

                </div>
            </div>
            <div class="card-block text-center">
                <div class="row">
                    <div class="col-10">
                        <p class="text-muted">@Html.DisplayFor(model => model.TestimonialContent)</p>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <br /><br />

    <form asp-action="Delete">
        <input type="hidden" asp-for="TestimonialId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="AddedTestimonial" asp-controller="Admin">Back to List</a>
    </form>
</div>
